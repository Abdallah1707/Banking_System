<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ak.ui.DashboardController">
    <children>
        <Label text="Dashboard" style="-fx-font-size: 20px;" />
        <TableView fx:id="accountsTable" prefWidth="600">
            <columns>
                <TableColumn text="Account Number" fx:id="accountNumberColumn" />
                <TableColumn text="Account Type" fx:id="accountTypeColumn" />
                <TableColumn text="Balance" fx:id="balanceColumn" />
            </columns>
        </TableView>
        <Button text="Go to Account" onAction="#handleGoToAccount" />
        <Button text="Log Out" onAction="#handleLogout" />
    </children>
</VBox>