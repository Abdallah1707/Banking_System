<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ak.ui.AccountController">
    <children>
        <Label text="Account Details" style="-fx-font-size: 20px;" />
        <Label fx:id="accountNumberLabel" />
        <Label fx:id="accountTypeLabel" />
        <Label fx:id="balanceLabel" />
        <Button text="Transfer Money" onAction="#handleGoToTransfer" />
        <Button text="Apply for Loan" onAction="#handleGoToLoanRequest" />
        <Button text="Back to Dashboard" onAction="#handleBackToDashboard" />
    </children>
</VBox>